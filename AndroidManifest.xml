<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.white.gorilla.pokemonlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PokemonListActivity"
            android:label="@string/title_activity_pokemon_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PokemonDetailView"
            android:label="@string/title_activity_pokemon_detail_view" >
        </activity>
        <activity
            android:name=".PokemonListInfoActivity"
            android:label="@string/title_activity_pokemon_list_info" >
        </activity>
    </application>

</manifest>
